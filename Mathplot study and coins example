oranlar=[32,29,13,11,8]
isimler=["a","b","c","d","e"]
deger=[0,0,0,0.25,0]
renkler=["pink","blue","purple","yellow","red"]

plt.pie(oranlar,labels=isimler,autopct="%1.1f%%",colors=renkler,explode=deger,shadow=True)
plt.title("Seçim Sonuçları")
plt.show()

