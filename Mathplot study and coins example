Binance=pd.read_csv("Binance.csv")

Litecoin=pd.read_csv("Litecoin.csv")

Binance

Litecoin

x=Binance["Date"]
x=x.astype("datetime64")
y=Binance["Close"]
z=Litecoin["Close"]
z=z[-len(y):]

plt.plot(x,y,color="pink")
plt.plot(x,z,color="#33FFBE")

plt.xlabel("Tarih")
plt.ylabel("Fiyat/USD")
plt.legend(["Binance","Litecoin"])
plt.show()

plt.plot(x,y,linestyle="dashed")
plt.plot(x,z,color="#33FFBE")
plt.xlabel("Tarih")
plt.ylabel("Fiyat/USD")
plt.legend(["Binance","Litecoin"])
plt.show()

plt.plot(x,y,linestyle="dashed",linewidth=3,color="purple")
plt.plot(x,z,color="#33FFBE")
plt.xlabel("Tarih")
plt.ylabel("Fiyat/USD")
plt.legend(["Binance","Litecoin"])
plt.show()

